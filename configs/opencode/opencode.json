{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "permission": {
        "task": {
          "*": "allow",
          "swift-build": "allow",
          "swift-format": "allow",
          "swift-lint": "allow",
          "swift-classify-changes": "allow",
          "web-search-researcher": "allow",
          "thoughts-locator": "allow",
          "thoughts-analyzer": "allow",
          "codebase-pattern-finder": "allow",
          "codebase-locator": "allow",
          "codebase-analyzer": "allow"
        }
      }
    },
    "plan": {
      "permission": {
        "task": {
          "*": "allow",
          "swift-build": "allow",
          "swift-format": "allow",
          "swift-lint": "allow",
          "swift-classify-changes": "allow",
          "web-search-researcher": "allow",
          "thoughts-locator": "allow",
          "thoughts-analyzer": "allow",
          "codebase-pattern-finder": "allow",
          "codebase-locator": "allow",
          "codebase-analyzer": "allow"
        }
      }
    }
  },
  "provider": {
    "cliproxyapi": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "CLIProxyAPI (local)",
      "options": {
        "baseURL": "http://127.0.0.1:8317/v1",
        "apiKey": "your-api-key-here"  // Replace with one of your configured API keys in CLIProxyAPI
      },
      "models": {
        
      }
    }
  }
}